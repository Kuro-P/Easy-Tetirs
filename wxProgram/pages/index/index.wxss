/**index.wxss**/
html,page{
  height: 100%;
}
.container{
  background: linear-gradient(to bottom, #06c,#9cf);
  width:100%;
  height:100%;
}
.container .title{
  font-size: 40px;
  font-weight: bold;
  text-shadow: 0px 0px 10px #9cf;
  color:honeydew;
  margin-top:-44vh;
  animation: moveText 1.5s ease-in-out;
}
@keyframes moveText{
  from{
    margin-top: -46vh;
    opacity:0;
  }
  to{
    margin-top:-44vh;
    opacity:1
  }
}
.container .startBtn{
  font-size: 14px;
  width:50vw;
  height:8vh;
  line-height:8vh;
  border-radius: 4vh;
  box-shadow: 0 0 10px rgba(0,0,0,.1);
}