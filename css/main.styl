.container
    width 400px
    margin 0 auto
    #canvas
        border 1px solid #ccc
        box-shadow0 0 5px rgba(0,0,0,.5)
        display block
    .controller
        width 100%
        height 100px
        border 1px solid #ccc
        div
            float left
        .rotate,.drop
            width 90px
            height 90px
            background #CCC
            display flex
            align-items center
            justify-content center
            border 1px solid #fff
            margin-top 5px
            margin-left 5px
            &:hover
                cursor pointer
        .direction
            width 180px
            margin-left 10px
            margin-top 20px
            height 100%
            div
                width 60px
                height 60px
                background #e3d2d2
                display flex
                align-items center
                justify-content center
                &:hover
                    cursor pointer